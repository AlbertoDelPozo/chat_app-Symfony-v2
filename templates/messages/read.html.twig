{% extends 'base.html.twig' %}

{% block title %}Chat
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1>Chat</h1>
				<h2>{{ message.title }}</h2>
				<p>Message from
					{{ message.sender.email }}</p>
				<p>Le
					{{ message.createdAt|date }}</p>
				<div>{{ message.message }}</div>
				<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
					My folders
				</a>
				<a href="{{path("received")}}" class="btn btn-primary">Back to inbox</a>
			</div>
		</div>
	</section>
	<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
		<div class="offcanvas-header">
			<h2 class="offcanvas-title" id="offcanvasExampleLabel">My folders</h2>
			<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
			<div class="list-group">
				<a href="{{ path("messages") }}" class="list-group-item list-group-item-action">Home</a>
			</div>
			<div class="list-group">
				<a href="{{ path("received") }}" class="list-group-item list-group-item-action active">Mailbox</a>
			</div>
			<div class="list-group">
				<a href="{{ path("messages") }}" class="list-group-item list-group-item-action">Sent messages</a>
			</div>
		</div>
	</div>
{% endblock %}

{% block footer %}
	<footer>
		<a class="btn btn-primary" href=" {{ path('app_logout') }} " role="button">LOGOUT</a>
	</footer>
{% endblock %}
